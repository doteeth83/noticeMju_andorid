<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
        <style name="Theme.Notice_mju" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
            <!-- 버튼의 기본 스타일 무시 -->
            <item name="buttonStyle">@android:style/Widget.TextView</item>
    </style>
    <style name="Widget.MaterialComponents.Button" parent="">
        <!-- 버튼의 모든 속성을 기본값으로 초기화 -->
    <!-- 버튼 기본 속성 스타일 정의 -->
        <!-- 기본적으로 텍스트는 가운데 정렬 -->
        <item name="android:gravity">center</item>
        <!-- 기본 크기는 wrap_content -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- 배경색을 투명하게 설정 -->
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <!-- 그림자, 높이 제거 -->
        <item name="android:elevation">0dp</item>
        <!-- 기본 텍스트 색상 -->
        <item name="android:textColor">#000000</item>
        <!-- 텍스트를 소문자 유지 -->
        <item name="android:textAllCaps">false</item>
        <!-- 기본 패딩 제거 -->
        <item name="android:padding">8dp</item>
        <!-- 글자 크기 -->
        <item name="android:textSize">12dp</item>
    </style>
</resources>