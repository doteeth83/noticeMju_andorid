<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F2F4F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 사진 등록 섹션 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="사진 등록하기"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
        <!--사진 등록하기 버튼-->

            <LinearLayout
                android:layout_width="73dp"
                android:layout_height="71dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/btn_upload_photo"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:contentDescription="사진 등록"
                    android:src="@drawable/ic_camera" />

                <TextView
                    android:id="@+id/btn_upload_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="사진 업로드"
                    android:textColor="#777777"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- 등록된 사진 RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photo_recycler_view"
                android:layout_width="262dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" />
        </LinearLayout>

        <!-- 상세 설명 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="상세 설명"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- 일정 -->

        <EditText
            android:id="@+id/edit_post_description"
            android:layout_width="347dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:hint="게시글 내용을 입력해주세요" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="일정"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_start_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="시작 날짜" />

            <Button
                android:id="@+id/btn_end_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="#FFFFFF"
                android:text="종료 날짜"
                />
        </LinearLayout>

        <!-- 등록하기 버튼 -->
        <Button
            android:id="@+id/btn_submit_post"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:background="@drawable/submit_button_border"
            android:text="등록하기"
            android:textColor="#0075FF" />
    </LinearLayout>

</ScrollView>
